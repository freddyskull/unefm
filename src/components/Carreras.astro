---
// Importa los valores de las props
const { title, nivel, curso, id } = Astro.props;

// Verifica la ruta actual
const currentPath = Astro.site.pathname;
const basePath = currentPath.includes("/carreras") ? "" : "/carreras";
const href = `${basePath}/${id}`;
---

<style>
  .box {
    transition: 0.3s;
  }
  .box:hover {
    box-shadow: var(--box-shadow);
  }
</style>

<a href={href}>
  <div
    class="flex flex-col justify-center items-center border-2 bg-white shadow-md py-6 p-4 rounded-md h-[250px] box"
  >
    <div class="opacity-50 my-4 mb-6">
      <slot />
    </div>
    <div class="w-full text-center">
      <h6
        class="line-clamp-2 text-slate-600 text-sm md:text-xl 2xl:text-2xl uppercase"
        transition:name={`title-${title}`}
      >
        {title}
      </h6>
      <div class="flex justify-between mt-4 text-sm">
        <span><b>Nivel:</b> {nivel}</span>
        <span><b>Curso:</b> {curso}</span>
      </div>
    </div>
  </div>
</a>
