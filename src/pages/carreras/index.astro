---
import { getCollection } from "astro:content";
import Carreras from "../../components/Carreras.astro";
import Icon from "../../components/Icons";
import Layout from "../../layouts/layout.astro";
const carreras = await getCollection("carreras");
---

<style>
  main {
    margin-bottom: 120px;
  }
  .title {
    margin-top: 20px !important;
  }
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
  ul li {
    width: calc(50% - 1rem);
  }
  ul li * {
    text-decoration: none;
    transition: 0.2s ease;
  }
  ul li:first-child {
    width: 100%;
    margin-bottom: 1rem;
    text-align: center;
  }
  ul li:first-child img {
    width: 100%;
  }
  ul li:first-child .title {
    font-size: 2.369rem;
  }
  ul li img {
    margin-bottom: 0.5rem;
    border-radius: 12px;
  }
  ul li a {
    display: block;
  }
  .title {
    margin: 0;
    color: rgb(var(--black));
    line-height: 1;
  }
  .date {
    margin: 0;
    color: rgb(var(--gray));
  }
  ul li a:hover h4,
  ul li a:hover .date {
    color: rgb(var(--accent));
  }
  ul a:hover img {
    box-shadow: var(--box-shadow);
  }
  @media (max-width: 720px) {
    ul {
      gap: 0.5em;
    }
    ul li {
      width: 100%;
      text-align: center;
    }
    ul li:first-child {
      margin-bottom: 0;
    }
    ul li:first-child .title {
      font-size: 1.563em;
    }
  }
</style>
<Layout>
  <main class="mx-auto mt-12 container">
    <section class="gap-8 grid grid-cols-1 md:grid-cols-3 xl:grid-cols-4">
      {
        carreras.map((item: any) => (
          
          <Carreras
            nombre_carrera={item.data.nombre_carrera}
            titulo={item.data.titulo}
            duracion={item.data.duracion}
            lugar={item.data.lugar}
            id={item.id}
          >
            <div transition:name={`icon-${item.data.icon}`}>
              <Icon name={item.data.icon} size={60} color={item.data.color} />
            </div>
          </Carreras>
        ))
      }
    </section>
  </main>
</Layout>
